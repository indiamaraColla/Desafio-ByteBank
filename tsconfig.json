{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "~components/*": ["./components/*"],
      "~pages/*": ["./pages/*"],
      "~hooks/*": ["./hooks/*"],
      "~utils/*": ["./utils/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.test.js",
    "src/types/custom.d.ts"
  ],
  "exclude": ["node_modules", "build", "scripts"]
}
